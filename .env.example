# =============================================================================
# DATA CENTRALIZATION PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="Data Centralization Platform"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="DEBUG"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Auto-reload on code changes (dev only)

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
SECRET_KEY="change-this-to-a-random-secret-key-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"
ALLOWED_METHODS="GET,POST,PUT,DELETE,PATCH"
ALLOWED_HEADERS="*"

# -----------------------------------------------------------------------------
# PostgreSQL Database (Metadata Store)
# -----------------------------------------------------------------------------
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="dfp_metadata"
POSTGRES_USER="dfp_user"
POSTGRES_PASSWORD="dfp_password_123"
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# Redis (Cache & Session Store)
# -----------------------------------------------------------------------------
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_URL="redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}"

# Cache TTL (seconds)
CACHE_DEFAULT_TTL=3600
CACHE_QUERY_RESULT_TTL=1800

# -----------------------------------------------------------------------------
# MinIO (S3-Compatible Object Storage)
# -----------------------------------------------------------------------------
MINIO_HOST="localhost"
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER="minioadmin"
MINIO_ROOT_PASSWORD="minioadmin123"
MINIO_ENDPOINT="http://${MINIO_HOST}:${MINIO_PORT}"
MINIO_SECURE=false

# Buckets
MINIO_BUCKET_RAW="raw-data"
MINIO_BUCKET_PROCESSED="processed-data"
MINIO_BUCKET_ARCHIVE="archive-data"

# -----------------------------------------------------------------------------
# RabbitMQ (Message Queue)
# -----------------------------------------------------------------------------
RABBITMQ_HOST="localhost"
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_DEFAULT_USER="rabbitmq"
RABBITMQ_DEFAULT_PASS="rabbitmq123"
RABBITMQ_URL="amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/"

# -----------------------------------------------------------------------------
# ClickHouse (Analytical Database) - Optional for Phase 2
# -----------------------------------------------------------------------------
CLICKHOUSE_HOST="localhost"
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER="default"
CLICKHOUSE_PASSWORD=""
CLICKHOUSE_DB="analytics"

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT="http://localhost:14268/api/traces"

# -----------------------------------------------------------------------------
# License Management
# -----------------------------------------------------------------------------
LICENSE_KEY=""
LICENSE_VALIDATION_URL="https://license.datafusion.com/validate"
OFFLINE_MODE=false

# -----------------------------------------------------------------------------
# Data Processing
# -----------------------------------------------------------------------------
MAX_WORKERS=4
BATCH_SIZE=1000
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# -----------------------------------------------------------------------------
# Storage Paths
# -----------------------------------------------------------------------------
DATA_DIR="./data"
LOGS_DIR="./logs"
TEMP_DIR="./tmp"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_GRAPHQL=false
FEATURE_STREAMING=false
FEATURE_ML_TRANSFORMS=false
